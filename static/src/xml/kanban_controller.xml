<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="project_user_stage_access.KanbanView.Buttons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="extension">
        <xpath expr="//button[@t-if='props.showButtons']" position="after">
            <t t-if="model.resModel === 'project.task' and model.groupByField and model.groupByField.name === 'stage_id'">
                <button type="button" class="btn btn-primary o_kanban_add_column" 
                        t-on-click="() => this.createGroup()">
                    <i class="fa fa-plus"/> Stage
                </button>
            </t>
        </xpath>
    </t>
</templates>

