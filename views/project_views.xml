<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend the project task kanban view to allow stage creation for Project Users -->
    <record id="view_task_kanban_inherit_stage_access" model="ir.ui.view">
        <field name="name">project.task.kanban.stage.access</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="group_create" remove="1"/>
                <attribute name="group_create">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>

